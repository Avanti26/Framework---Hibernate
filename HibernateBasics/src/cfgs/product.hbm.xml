<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="domain.Product" table="product_master">
        <id name="productId" column="product_id"></id>
        <property name="productName" column="product_name"/>
        <property name="productQty" column="product_qty"/>
        <property name="productPrice" column="product_price" />
        <property name="productCategory" column="product_category" />
    </class>
</hibernate-mapping>